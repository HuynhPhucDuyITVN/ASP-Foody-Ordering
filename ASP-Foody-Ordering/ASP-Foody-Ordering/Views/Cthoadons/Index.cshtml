@model IEnumerable<ASP_Foody_Ordering.Models.Cthoadon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách chi tiết hóa đơn</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Admin">Trang chủ</a></li>
        <li class="breadcrumb-item active">Chi tiết hóa đơn</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            <p>
                <a class="btn btn-outline-info" asp-action="Create">Thêm mới</a>
            </p>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DonGia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuong)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThanhTien)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaHdNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaMaNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaMaNavigation.HinhAnh)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DonGia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuong)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThanhTien)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaHdNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaMaNavigation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MaMaNavigation.HinhAnh)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.DonGia.ToString("n0")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                @item.ThanhTien.ToString("n0")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaHdNavigation.MaHd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaMaNavigation.Ten)
                            </td>
                            <td>
                                <img class="img-thumbnail" style="width:50px" src="~/images/MonAn/@Html.DisplayFor(modelItem => item.MaMaNavigation.HinhAnh)" />
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaCthd" class="btn btn-outline-warning">Cập nhật</a>
                                <a asp-action="Details" asp-route-id="@item.MaCthd" class="btn btn-outline-info">Chi tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

