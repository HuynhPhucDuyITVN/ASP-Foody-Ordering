@model ASP_Foody_Ordering.Models.Taikhoan
@{
    ViewData["Title"] = "DoiMK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["doimk"] != null)
{
    <div class="alert alert-danger">@TempData["doimk"]</div>
}
<section class="py-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-info text-white text-center">
                        <h3>Thông tin khách hàng</h3>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Home" asp-action="DoiMK">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MaTk" />
                            <div class="my-3">
                                <label>Mật khẩu cũ</label>
                                <input type="password" class="form-control" name="matkhaucu" required />
                            </div>
                            <div class="my-3">
                                <label>Mật khẩu mới</label>
                                <input type="password" class="form-control" name="matkhaumoi" required />
                            </div>
                            <div class="my-3">
                                <label>Xác nhận mật khẩu</label>
                                <input type="password" class="form-control" name="xacnhanmatkhau" required />
                            </div>
                            <div class="d-grid">
                                <input type="submit" value="Lưu mật khẩu" class="btn btn-info btn btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>