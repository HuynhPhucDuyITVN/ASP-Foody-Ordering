@model ASP_Foody_Ordering.Models.Taikhoan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<section class="py-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-info text-white text-center">
                        <h3>Thêm tài khoản</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Ten" class="control-label"></label>
                                <input asp-for="Ten" class="form-control" required />
                                <span asp-validation-for="Ten" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DienThoai" class="control-label"></label>
                                <input asp-for="DienThoai" class="form-control" required type="tel" />
                                <span asp-validation-for="DienThoai" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" required type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MatKhau" class="control-label"></label>
                                <input type="password" asp-for="MatKhau" class="form-control" required />
                                <span asp-validation-for="MatKhau" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="d-grid form-group">
                                <input type="submit" value="Tạo" class="btn btn-info btn btn-block" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Index" class="btn btn-info">Quay về</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



