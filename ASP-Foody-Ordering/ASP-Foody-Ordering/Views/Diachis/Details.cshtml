@model ASP_Foody_Ordering.Models.Diachi

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Chi tiết Địa chỉ </h3></div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DiaChi):
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DiaChi)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PhuongXa):
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PhuongXa)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.QuanHuyen):
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.QuanHuyen)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TinhThanh):
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TinhThanh)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.MaTkNavigation)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.MaTkNavigation.Ten)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer text-center py-3">
                            <a asp-action="Edit" asp-route-id="@Model.MaDc" class="btn btn-outline-warning">Cập nhật</a>
                            <a asp-action="Index" class="btn btn-outline-info">Quay về</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
