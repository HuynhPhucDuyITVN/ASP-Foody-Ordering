@model ASP_Foody_Ordering.Models.Danhmuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutAuthentication_content">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Chi tiết Danh mục</h3></div>
                        <div class="card-body">
                            <img src="~/images/DanhMuc/@Html.DisplayFor(model => model.HinhAnh)" alt="project-image" class="rounded  mx-auto d-block">
                            <div class="project-info-box text-center">
                                <p><b>Danh mục: </b>@Html.DisplayFor(model => model.Ten)</p>
                                @if (Model.TrangThai == 1)
                                {
                                    <p>
                                        <b>Trạng thái: </b>Còn hoạt động
                                    </p>
                                }
                                else if (Model.TrangThai == 0)
                                {
                                    <p>
                                        <b>Trạng thái: </b>Ngưng hoạt động
                                    </p>
                                }
                            </div><!-- / project-info-box -->
                        </div>
                        <div class="card-footer text-center py-3">
                            <a asp-action="Index" class="btn btn-outline-info">Quay về</a>
                            <a asp-action="Edit" asp-route-id="@Model.MaDm" class="btn btn-outline-warning">Cập nhật</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>