@model ASP_Foody_Ordering.Models.Monan

@{
    ViewData["Title"] = "Details";
}


<section>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center font-weight-bold text-success">@Html.DisplayFor(model => model.Ten)</h3>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div class="white-box text-center">
                            <img class="img-thumbnail" style="height:400px" src="~/images/MonAn/@Html.DisplayFor(model => model.HinhAnh)" />
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h4 class="box-title mt-5">Mô tả</h4>
                        <p>@Html.DisplayFor(model => model.MoTa)</p>
                        <h2 class="mt-5">
                            @{
                                var culture = new System.Globalization.CultureInfo("vi-VN");
                            }
                            @String.Format(culture, "{0:C0}", Model.GiaBan) 
                            @if (Model.GiaBan != Model.GiaGoc)
                            {
                                <small class="text-danger" style="text-decoration: line-through;">@String.Format(culture, "{0:C0}", Model.GiaGoc)</small>
                            }
                        </h2>
                        <a class="btn btn-success" asp-controller="Home" asp-action="AddToCart" asp-route-id="@Model.MaMa">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

