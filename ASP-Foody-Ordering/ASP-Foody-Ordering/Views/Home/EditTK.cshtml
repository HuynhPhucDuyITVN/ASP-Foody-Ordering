@model ASP_Foody_Ordering.Models.Taikhoan
@{
    ViewData["Title"] = "EditTK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="py-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-info text-white text-center">
                        <h3>Thông tin khách hàng</h3>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Home" asp-action="EditTK">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="MaTk" />
                            <div class="form-group">
                                <label asp-for="Ten" class="control-label"></label>
                                <input asp-for="Ten" class="form-control" required />
                                <span asp-validation-for="Ten" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DienThoai" class="control-label"></label>
                                <input asp-for="DienThoai" class="form-control" required />
                                <span asp-validation-for="DienThoai" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" required disabled />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="display: none;">
                                <label asp-for="MatKhau" class="control-label"></label>
                                <input asp-for="MatKhau" class="form-control" />
                                <span asp-validation-for="MatKhau" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="display: none;">
                                <label asp-for="QuyenHan" class="control-label"></label>
                                <input asp-for="QuyenHan" class="form-control" />
                                <span asp-validation-for="QuyenHan" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="display: none;">
                                <label asp-for="TrangThai" class="control-label"></label>
                                <input asp-for="TrangThai" class="form-control" />
                                <span asp-validation-for="TrangThai" class="text-danger"></span>
                            </div>
                            <div class="d-grid">
                                <input type="submit" value="Lưu" class="btn btn-info btn btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

